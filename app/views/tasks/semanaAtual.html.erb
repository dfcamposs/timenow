	            <div class="container-fluid">

	            <div class="col-md-12 dashboard" align="center">
	            <h4 class="title-dashboard">Semana Atual</h4>
	            <div class="table-responsive-vertical shadow-z-1">				  
				  <table id="table" class="table table-mc-light-blue table-dashboard">
				      <thead>
				        <tr>
				          <th>Domingo </th>
				          <th>Segunda-Feira</th>
				          <th>Terça-Feira</th>
				          <th>Quarta-Feira</th>
				          <th>Quinta-Feira</th>
				          <th>Sexta-Feira</th>
				          <th>Sábado</th>
				        </tr>
				      </thead>
				      <tbody>
				        <tr class="tr-tasks"> 
				          <td>
				          	<% week_tasks(1).each do |day_of_week| -%>
									<button id="<%= day_of_week.id %>_task" class="mdl-button mdl-js-button list-task-dashboard" onclick="agrupar('<%= day_of_week.id %>', '<%= day_of_week.title %>','<%= day_of_week.spentTime %>')">
							  		<%= day_of_week.title %> 
									</button>								
							<%end%>					
				          </td>
				          <td>
				          	<% week_tasks(2).each do |day_of_week| -%>
